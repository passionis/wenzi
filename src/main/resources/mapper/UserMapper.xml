<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.passion.demo.mapper.UserMapper">
    <sql id="user">

    </sql>

    <select id="selectByToken" resultType="com.passion.demo.domain.User">
        select *
        from user
        where token = #{token}
    </select>
    <select id="selectByUserName" resultType="com.passion.demo.domain.User">
        SELECT *
        FROM `user` u
        WHERE u.NAME = #{username}
          AND u.pwd = #{password}
        limit 1
    </select>
</mapper>